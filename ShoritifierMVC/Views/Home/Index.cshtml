@model List<ComplexUrl>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="container">
        <form method="post" asp-controller="Home" asp-action="Index">
            <div class="form-group row mb-2">
                <div class="col-3">
                    <label for="fullUrl">Full Url:</label>
                </div>
                <div class="col-6">
                    <input id="fullUrl" name="fullUrl" type="url" class="form-control" />
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-3">
                    <label >Short Url:</label>
                </div>
                <div class="col-6">
                    <input readonly type="url" class="form-control" value="@TempData["Result"]" />
                </div>
            </div>
            <input type="submit" class="btn btn-primary" value="Shortify" />
        </form>
    </div>
</div>

@if (User.Identity.IsAuthenticated)
{
    <div class="text-center">
        <table class="table table-striped table-bordered mt-2">
            <thead class="thead-dark">
                <tr>
                    <th>Short Url</th>
                    <th>Full Url</th>
                    <th>Times Used</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var complexUrl in Model)
                {
                    <tr>
                        <td>@complexUrl.FullUrl</td>
                        <td>@complexUrl.ShortUrl</td>
                        <td>@complexUrl.NumberOfUses</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


